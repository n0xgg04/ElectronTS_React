{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "main": "./build/electron.js",
  "scripts": {
    "start": "yarn run build && electron ./build/electron.js",
    "build": "tsc ./src/*.{tsx,ts} --outDir ./build --jsx react && webpack --config ./webpack.config.js",
    "prebuild": "rm -rf ./build && mkdir build && cp static/index.html build/index.html",
    "lint": "yarn eslint ./src --ext .ts,.tsx",
    "lint:fix": "yarn eslint ./src --ext .ts,.tsx --fix",
    "format": "yarn prettier --write ./src/**/*.{ts,tsx}",
    "watch": "webpack --config ./webpack.config.js --watch && tsc ./src/electron.ts --outDir ./build --watch && electron ./build/electron.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@types/react": "^18.2.29",
    "@types/react-dom": "^18.2.14",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^27.0.1",
    "html-webpack-plugin": "^5.5.3",
    "node-sass": "^9.0.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0"
  },
  "browser": {
    "[module-name]": false
  }
}
